{
   "env": {
      "browser": true,
      "es2021": true
   },
   "extends": [
      "standard"
   ],
   "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
   },
   "rules": {
      "no-shadow": [
         "error",
         {
            "builtinGlobals": true,
            "hoist": "all",
            "allow": [
               "document",
               "event",
               "name",
               "parent",
               "status",
               "top"
            ]
         }
      ],
      "brace-style": [
         "error",
         "stroustrup"
      ],
      "no-undef": "off",
      "object-shorthand": "off",
      "prefer-const": "off",
      "jsdoc/require-jsdoc": "off",
      "space-before-function-paren": "off",
      "jsdoc/tag-lines": "off",
      "jsdoc/newline-after-description": "off",
      "indent": [
         "error",
         3,
         {
            "SwitchCase": 1
         }
      ],
      "semi": 2,
      "no-unused-vars": [
         "warn",
         {
            "vars": "all",
            "args": "after-used",
            "ignoreRestSiblings": false
         }
      ]
   }
}